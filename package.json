{
  "name": "claude-telegram-relay",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bun run src/relay.ts",
    "dev": "bun run --watch src/relay.ts",
    "check": "tsc --noEmit",
    "on": "bun run check && launchctl unload ~/Library/LaunchAgents/com.claude.telegram-relay.plist 2>/dev/null; launchctl load ~/Library/LaunchAgents/com.claude.telegram-relay.plist",
    "off": "launchctl unload ~/Library/LaunchAgents/com.claude.telegram-relay.plist 2>/dev/null || true",
    "restart": "bash scripts/restart-daemon.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3",
    "grammy": "^1.21.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
