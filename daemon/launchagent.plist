<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Unique identifier for this service -->
    <key>Label</key>
    <string>com.claude.telegram-relay</string>

    <!-- Command to run -->
    <key>ProgramArguments</key>
    <array>
        <string>/Users/motbot/.bun/bin/bun</string>
        <string>run</string>
        <string>src/relay.ts</string>
    </array>

    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <string>/Users/motbot/workspace/claude-telegram-relay</string>

    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/Users/motbot/.bun/bin:/Users/motbot/.local/bin:/usr/local/bin:/usr/bin:/bin</string>
        <key>HOME</key>
        <string>/Users/motbot</string>
        <key>CLAUDE_WORKING_DIR</key>
        <string>/Users/motbot/workspace/auto-injury-assistance</string>
        <key>AUTONOMOUS_MODE</key>
        <string>true</string>
        <key>CLAUDE_PATH</key>
        <string>/Users/motbot/.local/bin/claude</string>
    </dict>

    <!-- Start when loaded -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Keep running (restart if it crashes) -->
    <key>KeepAlive</key>
    <true/>

    <!-- Log files -->
    <key>StandardOutPath</key>
    <string>/Users/motbot/Library/Logs/claude-telegram-relay.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/motbot/Library/Logs/claude-telegram-relay.error.log</string>

    <!-- Wait 10 seconds before restarting after crash -->
    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>

<!--
SETUP INSTRUCTIONS:

1. Replace all YOUR_USERNAME with your actual macOS username

2. Copy to LaunchAgents:
   cp daemon/launchagent.plist ~/Library/LaunchAgents/com.claude.telegram-relay.plist

3. Make sure your .env file exists in the relay directory

4. Load the agent:
   launchctl load ~/Library/LaunchAgents/com.claude.telegram-relay.plist

5. Check if running:
   launchctl list | grep claude

6. View logs:
   tail -f ~/Library/Logs/claude-telegram-relay.log

7. To stop:
   launchctl unload ~/Library/LaunchAgents/com.claude.telegram-relay.plist

8. To restart:
   launchctl unload ~/Library/LaunchAgents/com.claude.telegram-relay.plist
   launchctl load ~/Library/LaunchAgents/com.claude.telegram-relay.plist
-->
